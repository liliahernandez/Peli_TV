<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nefis" parent="Theme.Leanback">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:windowBackground">@color/default_background</item>
        
        <!-- Leanback specific customizations -->
        <item name="browseRowsMarginTop">150dp</item>
        <item name="browseTitleIconStyle">@style/TitleIconStyle</item>
        <item name="rowHeaderDescriptionStyle">@style/RowHeaderDescriptionStyle</item>
    </style>
    
    <style name="TitleIconStyle" parent="Widget.Leanback.Title.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RowHeaderDescriptionStyle" parent="Widget.Leanback.Row.Header.Description">
        <item name="android:textColor">#B0BEC5</item>
    </style>
</resources>